type TDefaultErrorCodes =
	| 'BAD_REQUEST'
	| 'UNAUTHORIZED'
	| 'FORBIDDEN'
	| 'NOT_FOUND'
	| 'INTERNAL_SERVER_ERROR'
	| 'BAD_GATEWAY'
	| 'SERVICE_UNAVAILABLE';

const defaultErrorCodes: Record<number, TDefaultErrorCodes> = {
	400: 'BAD_REQUEST',
	401: 'UNAUTHORIZED',
	403: 'FORBIDDEN',
	404: 'NOT_FOUND',
	500: 'INTERNAL_SERVER_ERROR',
	502: 'BAD_GATEWAY',
	503: 'SERVICE_UNAVAILABLE',
};

const parseErrorCodes = (options: ApiRequestOptions, result: ApiResult): TDefaultErrorCodes => {
	return defaultErrorCodes[result.status] || 'UNKNOWN_ERROR';
};
